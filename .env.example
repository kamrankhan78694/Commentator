# Commentator Environment Configuration
# Copy this file to .env.local and update the values

# Firebase Configuration
FIREBASE_API_KEY=your_api_key_here
FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
FIREBASE_DATABASE_URL=https://your_project-default-rtdb.region.firebasedatabase.app
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_STORAGE_BUCKET=your_project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=123456789
FIREBASE_APP_ID=1:123456789:web:abcdefghijklmnop

# Web3 Storage (Optional)
WEB3_STORAGE_TOKEN=your_web3_storage_token

# Environment Settings
NODE_ENV=development
DEBUG_MODE=true
ENABLE_LOGGING=true

# Security Settings
CSRF_SECRET=your_csrf_secret_key_here
