# Staging Environment Variables
# Use these for staging/testing deployment

FIREBASE_API_KEY=staging-api-key-replace-with-actual
FIREBASE_AUTH_DOMAIN=commentator-staging.firebaseapp.com
FIREBASE_DATABASE_URL=https://commentator-staging-default-rtdb.firebaseio.com
FIREBASE_PROJECT_ID=commentator-staging
FIREBASE_STORAGE_BUCKET=commentator-staging.appspot.com
FIREBASE_MESSAGING_SENDER_ID=987654321098
FIREBASE_APP_ID=1:987654321098:web:staging123456

API_BASE_URL=https://api-staging.commentator.app
ENABLE_ANALYTICS=false
ENABLE_DEBUG_MODE=true
ENABLE_WEB3_FEATURES=true
ENABLE_PERFORMANCE_MONITORING=true

# Security - Use test values for staging
ENCRYPTION_KEY=staging-32-char-encryption-key-test
JWT_SECRET=staging-jwt-secret-minimum-32-characters-test

# Rate limiting for staging
RATE_LIMIT_REQUESTS_PER_MINUTE=200
ALLOWED_ORIGINS=https://staging.commentator.app,https://dev.commentator.app

# Logging
LOG_LEVEL=debug
ENABLE_CONSOLE_LOGGING=true
ENABLE_REMOTE_LOGGING=true
