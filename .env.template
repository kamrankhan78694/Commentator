# Firebase Configuration - Development
# Copy this file to .env.local and fill with your actual values

# Firebase Project Configuration
FIREBASE_API_KEY=your-firebase-api-key-here
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_DATABASE_URL=https://your-project-default-rtdb.firebaseio.com
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your-sender-id
FIREBASE_APP_ID=your-app-id

# Optional: Analytics
FIREBASE_MEASUREMENT_ID=your-measurement-id

# API Configuration
API_BASE_URL=http://localhost:3000/api
API_VERSION=v1

# Security
ENCRYPTION_KEY=your-32-character-encryption-key-here
JWT_SECRET=your-jwt-secret-key-minimum-32-chars

# Feature Flags
ENABLE_ANALYTICS=false
ENABLE_DEBUG_MODE=true
ENABLE_WEB3_FEATURES=false
ENABLE_REAL_TIME_COMMENTS=true
ENABLE_PERFORMANCE_MONITORING=false

# Development Settings
USE_FIREBASE_EMULATORS=true
EMULATOR_AUTH_PORT=9099
EMULATOR_DATABASE_PORT=9000
EMULATOR_HOSTING_PORT=5000

# CORS and Security
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000,http://127.0.0.1:8000
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# Logging
LOG_LEVEL=debug
ENABLE_CONSOLE_LOGGING=true
ENABLE_REMOTE_LOGGING=false
